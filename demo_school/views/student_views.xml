<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree (list) view -->
    <record id="view_student_tree" model="ir.ui.view">
        <field name="name">demo_school.student.tree</field>
        <field name="model">demo_school.student</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="registration"/>
                <field name="gender"/>
                <field name="age"/>
                <field name="is_adult"/>
                <field name="teacher_id"/>
                <field name="email"/>
                <field name="image" widget="image" options="{'size': [50, 50]}"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Kanban view for students -->
    <record id="view_student_kanban" model="ir.ui.view">
        <field name="name">demo_school.student.kanban</field>
        <field name="model">demo_school.student</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="image"/>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="is_adult"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image"
                                 style="height: 100%; align-content: center;margin-right:1rem; margin-left:1rem;">
                                <img t-att-src="kanban_image('demo_school.student', 'image', record.id.value)"
                                     alt="Student Image"
                                     class="o_kanban_avatar"/>
                            </div>
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <div class="o_kanban_record_badge">
                                    <span t-if="record.is_adult.raw_value" class="badge badge-success">Adult</span>
                                    <span t-else="" class="badge badge-info">Minor</span>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div t-if="record.age.raw_value">
                                    <i class="fa fa-birthday-cake"/>
                                    Age:
                                    <field name="age"/>
                                </div>
                                <div t-if="record.gender.raw_value">
                                    <i class="fa fa-user"/>
                                    <field name="gender"/>
                                </div>
                                <div t-if="record.email.raw_value">
                                    <i class="fa fa-envelope"/>
                                    <field name="email"/>
                                </div>
                                <div t-if="record.phone.raw_value">
                                    <i class="fa fa-phone"/>
                                    <field name="phone"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_student_form" model="ir.ui.view">
        <field name="name">demo_school.student.form</field>
        <field name="model">demo_school.student</field>
        <field name="arch" type="xml">
            <form string="Student">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- You can add smart buttons here later -->
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="registration"/>
                            <field name="gender"/>
                            <field name="age" readonly="1"/>
                            <field name="is_adult" readonly="1"/>
                            <field name="image" width='image'/>
                        </group>
                        <group>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="course_id"/>
                            <field name="teacher_id"/>
                            <field name="date_of_birth"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <!--                    <notebook>-->
                    <!--                        <page string="Chatter">-->
                    <!--                            <field name="message_follower_ids" widget="mail_followers"/>-->
                    <!--                            <field name="message_ids" widget="mail_thread"/>-->
                    <!--                        </page>-->
                    <!--                    </notebook>-->
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action (window action to open list/form) -->
    <record id="action_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">demo_school.student</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first student record.
            </p>
        </field>
    </record>


</odoo>
