<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree (list) view -->
    <record id="view_course_tree" model="ir.ui.view">
        <field name="name">demo_school.course.tree</field>
        <field name="model">demo_school.course</field>
        <field name="arch" type="xml">
            <tree>
                <t t-if="is_hidden">
                    <field name="name"/>
                    <field name="teacher_ids"/>
                </t>
            </tree>
        </field>
    </record>


    <!-- Form view -->
    <record id="view_course_form" model="ir.ui.view">
        <field name="name">demo_school.course.form</field>
        <field name="model">demo_school.course</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" required="True"/>
                        <field name="teacher_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->

    <record id="action_course" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">demo_school.course</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first course record.
            </p>
        </field>
    </record>


</odoo>
