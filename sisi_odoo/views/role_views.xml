<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree (list) view -->
    <record id="view_role_tree" model="ir.ui.view">
        <field name="name">sisi.role.tree</field>
        <field name="model">sisi.role</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_role_form" model="ir.ui.view">
        <field name="name">sisi.role.form</field>
        <field name="model">sisi.role</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_role" model="ir.actions.act_window">
        <field name="name">Role</field>
        <field name="res_model">sisi.role</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_role_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a role record.
            </p>
        </field>
    </record>

</odoo>