<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree (list) view -->
    <record id="view_course_selection_tree" model="ir.ui.view">
        <field name="name">sisi.course.selection.tree</field>
        <field name="model">sisi.course.selection</field>
        <field name="arch" type="xml">
            <tree>
                <field name="active_course_id"/>
                <field name="student_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_course_selection_form" model="ir.ui.view">
        <field name="name">sisi.course.selection.form</field>
        <field name="model">sisi.course.selection</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="active_course_id"/>
                        <field name="student_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_course_selection" model="ir.actions.act_window">
        <field name="name">Course Selection</field>
        <field name="res_model">sisi.course.selection</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a course selection record.
            </p>
        </field>
    </record>

</odoo>