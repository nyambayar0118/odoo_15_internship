<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree (list) view -->
    <record id="view_teacher_tree" model="ir.ui.view">
        <field name="name">sisi.teacher.tree</field>
        <field name="model">sisi.teacher</field>
        <field name="arch" type="xml">
            <tree>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="registry_no"/>
                <field name="email"/>
                <field name="phone_no"/>
                <field name="dob"/>
                <field name="is_active"/>
                <field name="status"/>
                <field name="sisi_email"/>
                <field name="hire_date"/>
                <field name="education"/>
                <field name="roles" widget="many2many_tags"/>
                <field name="specialization"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_teacher_form" model="ir.ui.view">
        <field name="name">sisi.teacher.form</field>
        <field name="model">sisi.teacher</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="Main Info">
                        <field name="first_name"/>
                        <field name="last_name"/>
                        <field name="registry_no"/>
                        <field name="email"/>
                        <field name="phone_no"/>
                        <field name="dob"/>
                        <field name="is_active"/>
                        <field name="status"
                               attrs="{'readonly': [('is_active', '=', True)]}"/>
                    </group>
                    <group string="Employee Info">
                        <field name="sisi_email"/>
                        <field name="hire_date"/>
                        <field name="education"/>
                        <field name="roles" widget="many2many_tags"/>
                    </group>
                    <group string="Teacher Info">
                        <field name="specialization"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_teacher" model="ir.actions.act_window">
        <field name="name">Teacher</field>
        <field name="res_model">sisi.teacher</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a teacher record.
            </p>
        </field>
    </record>

</odoo>