<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree (list) view -->
    <record id="view_student_plan_item_tree" model="ir.ui.view">
        <field name="name">sisi.student.plan.item.tree</field>
        <field name="model">sisi.student.plan.item</field>
        <field name="arch" type="xml">
            <tree>
                <field name="year"/>
                <field name="season"/>
                <field name="student_id"/>
                <field name="course_id"/>
                <field name="status"/>
                <field name="grade_id"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_student_plan_item_form" model="ir.ui.view">
        <field name="name">sisi.student.plan.item.form</field>
        <field name="model">sisi.student.plan.item</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="year"/>
                        <field name="season"/>
                        <field name="student_id"/>
                        <field name="course_id"/>
                        <field name="status"/>
                        <field name="grade_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_student_plan_item" model="ir.actions.act_window">
        <field name="name">Student Plan Item</field>
        <field name="res_model">sisi.student.plan.item</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a student plan item record.
            </p>
        </field>
    </record>

</odoo>