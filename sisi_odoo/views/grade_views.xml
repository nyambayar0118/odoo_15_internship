<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree (list) view -->
    <record id="view_grade_tree" model="ir.ui.view">
        <field name="name">sisi.grade.tree</field>
        <field name="model">sisi.grade</field>
        <field name="arch" type="xml">
            <tree>
                <field name="o1"/>
                <field name="o2"/>
                <field name="letter_grade"/>
                <field name="student_plan_item_id"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_grade_form" model="ir.ui.view">
        <field name="name">sisi.grade.form</field>
        <field name="model">sisi.grade</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="o1"/>
                        <field name="o2"/>
                        <field name="letter_grade"/>
                        <field name="student_plan_item_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_grade" model="ir.actions.act_window">
        <field name="name">Grade</field>
        <field name="res_model">sisi.grade</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a grade record.
            </p>
        </field>
    </record>

</odoo>