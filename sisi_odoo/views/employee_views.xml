<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree (list) view -->
    <record id="view_employee_tree" model="ir.ui.view">
        <field name="name">sisi.employee.tree</field>
        <field name="model">sisi.employee</field>
        <field name="arch" type="xml">
            <tree>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="registry_no"/>
                <field name="email"/>
                <field name="phone_no"/>
                <field name="dob"/>
                <field name="is_active"/>
                <field name="status"/>
                <field name="sisi_email"/>
                <field name="hire_date"/>
                <field name="education"/>
                <field name="roles" widget="many2many_tags"/>

            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_employee_form" model="ir.ui.view">
        <field name="name">sisi.employee.form</field>
        <field name="model">sisi.employee</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group string="Main Info">
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="registry_no"/>
                            <field name="email"/>
                            <field name="phone_no"/>
                            <field name="dob"/>
                            <field name="is_active"/>
                            <field name="status"
                                   attrs="{'readonly': [('is_active', '=', True)]}"/>
                        </group>
                        <group string="Employee Info">
                            <field name="sisi_email"/>
                            <field name="hire_date"/>
                            <field name="education"/>
                            <field name="roles" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_employee" model="ir.actions.act_window">
        <field name="name">Employee</field>
        <field name="res_model">sisi.employee</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a employee record.
            </p>
        </field>
    </record>

</odoo>