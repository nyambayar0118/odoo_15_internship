<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree (list) view -->
    <record id="view_school_tree" model="ir.ui.view">
        <field name="name">sisi.school.tree</field>
        <field name="model">sisi.school</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="address"/>
                <field name="established_date"/>
                <field name="google_map_link"/>
                <field name="google_map_embed_link" widget="url"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_school_form" model="ir.ui.view">
        <field name="name">sisi.school.form</field>
        <field name="model">sisi.school</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" required="True"/>
                        <field name="address"/>
                        <field name="established_date"/>
                        <field name="google_map_link" widget="url"/>
                        <field name="google_map_embed_link" widget="url"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_school" model="ir.actions.act_window">
        <field name="name">School</field>
        <field name="res_model">sisi.school</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a school record.
            </p>
        </field>
    </record>

</odoo>