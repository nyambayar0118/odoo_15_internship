<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree (list) view -->
    <record id="view_user_tree" model="ir.ui.view">
        <field name="name">sisi.user.tree</field>
        <field name="model">sisi.user</field>
        <field name="arch" type="xml">
            <tree>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="registry_no"/>
                <field name="email"/>
                <field name="phone_no"/>
                <field name="sisi_email"/>
                <field name="dob"/>
                <field name="is_active"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_user_form" model="ir.ui.view">
        <field name="name">sisi.user.form</field>
        <field name="model">sisi.user</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="first_name"/>
                        <field name="last_name"/>
                        <field name="registry_no"/>
                        <field name="email"/>
                        <field name="phone_no"/>
                        <field name="dob"/>
                        <field name="is_active"/>
                        <field name="status" attrs="{'readonly': [('is_active', '=', True)]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_user" model="ir.actions.act_window">
        <field name="name">User</field>
        <field name="res_model">sisi.user</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a user record.
            </p>
        </field>
    </record>

</odoo>