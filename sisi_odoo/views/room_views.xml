<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Tree (list) view -->
    <record id="view_room_tree" model="ir.ui.view">
        <field name="name">sisi.room.tree</field>
        <field name="model">sisi.room</field>
        <field name="arch" type="xml">
            <tree>
                <field name="school_id"/>
                <field name="room_no"/>
                <field name="type"/>
                <field name="max_capacity"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_room_form" model="ir.ui.view">
        <field name="name">sisi.room.form</field>
        <field name="model">sisi.room</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="school_id"/>
                        <field name="room_no"/>
                        <field name="type"/>
                        <field name="max_capacity"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_room" model="ir.actions.act_window">
        <field name="name">Room</field>
        <field name="res_model">sisi.room</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a room record.
            </p>
        </field>
    </record>

</odoo>
