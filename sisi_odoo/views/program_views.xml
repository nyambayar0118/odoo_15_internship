<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree (list) view -->
    <record id="view_program_tree" model="ir.ui.view">
        <field name="name">sisi.program.tree</field>
        <field name="model">sisi.program</field>
        <field name="arch" type="xml">
            <tree>
                <field name="index"/>
                <field name="name"/>
                <field name="created_year"/>
                <field name="type"/>
                <field name="duration_years"/>
                <field name="description"/>
                <field name="school_id"/>
                <field name="department_id"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_program_form" model="ir.ui.view">
        <field name="name">sisi.program.form</field>
        <field name="model">sisi.program</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="index"/>
                        <field name="name"/>
                        <field name="created_year"/>
                        <field name="type"/>
                        <field name="duration_years"/>
                        <field name="description"/>
                        <field name="school_id"/>
                        <field name="department_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_program" model="ir.actions.act_window">
        <field name="name">Program</field>
        <field name="res_model">sisi.program</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a program record.
            </p>
        </field>
    </record>

</odoo>