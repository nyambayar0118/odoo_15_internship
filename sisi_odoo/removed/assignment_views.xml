<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree (list) view -->
    <record id="view_assignment_tree" model="ir.ui.view">
        <field name="name">sisi.assignment.tree</field>
        <field name="model">sisi.assignment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
                <field name="due_date"/>
                <field name="max_score"/>
                <field name="attachments"/>
                <field name="is_submittable"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_assignment_form" model="ir.ui.view">
        <field name="name">sisi.assignment.form</field>
        <field name="model">sisi.assignment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="due_date"/>
                        <field name="max_score"/>
                        <field name="attachments"/>
                        <field name="is_submittable"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_assignment" model="ir.actions.act_window">
        <field name="name">Assignment</field>
        <field name="res_model">sisi.assignment</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a assignment record.
            </p>
        </field>
    </record>

</odoo>