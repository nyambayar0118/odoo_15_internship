<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree (list) view -->
    <record id="view_attendance_tree" model="ir.ui.view">
        <field name="name">sisi.attendance.tree</field>
        <field name="model">sisi.attendance</field>
        <field name="arch" type="xml">
            <tree>
                <field name="attendance_date"/>
                <field name="attendance_type"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_attendance_form" model="ir.ui.view">
        <field name="name">sisi.attendance.form</field>
        <field name="model">sisi.attendance</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="attendance_date"/>
                        <field name="attendance_type"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_attendance" model="ir.actions.act_window">
        <field name="name">Attendance</field>
        <field name="res_model">sisi.attendance</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a attendance record.
            </p>
        </field>
    </record>

</odoo>