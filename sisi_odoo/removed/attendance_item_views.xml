<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree (list) view -->
    <record id="view_attendance_item_tree" model="ir.ui.view">
        <field name="name">sisi.attendance.item.tree</field>
        <field name="model">sisi.attendance.item</field>
        <field name="arch" type="xml">
            <tree>
                <field name="attendance_status"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_attendance_item_form" model="ir.ui.view">
        <field name="name">sisi.attendance.item.form</field>
        <field name="model">sisi.attendance.item</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="attendance_status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_attendance_item" model="ir.actions.act_window">
        <field name="name">Attendance record</field>
        <field name="res_model">sisi.attendance.item</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create an attendance item record.
            </p>
        </field>
    </record>

</odoo>