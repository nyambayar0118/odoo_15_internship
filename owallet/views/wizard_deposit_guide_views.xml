<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_deposit_wizard_guide_form" model="ir.ui.view">
        <field name="name">owallet.deposit.wizard.guide.form</field>
        <field name="model">owallet.deposit.wizard.guide</field>
        <field name="arch" type="xml">
            <form string="Deposit Guide">
                <group>
                    <field name="user_balance" widget="monetary" string="Your Current Balance"/>
                </group>
                <separator string="How to Deposit"/>
                <field name="guide" nolabel="1" readonly="1"/>
                <footer>
                    <button string="Close" class="btn-primary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>